<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorBackground"
  tools:context=".MainActivity">

  <ImageView
    android:id="@+id/imgBack"
    android:layout_width="match_parent"
    android:layout_height="344dp"
    android:layout_marginBottom="315dp"
    android:background="@drawable/style_dif"
    tools:ignore="ContentDescription"/>

  <ImageView
    android:layout_width="87dp"
    android:layout_height="87dp"
    android:layout_marginTop="113dp"
    android:layout_marginBottom="144dp"
    android:layout_alignBottom="@+id/imgBack"
    android:layout_alignTop="@+id/imgBack"
    android:layout_centerHorizontal="true"
    android:background="@drawable/logo"
    tools:ignore="ContentDescription"/>

  <Button
    android:id="@+id/btnStart"
    android:layout_width="242dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="174dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/style_button"
    android:gravity="center"
    android:text="@string/start"
    android:textAllCaps="false"
    android:textColor="@color/colorButtonText"
    android:textSize="20sp"/>

  <Button
    android:id="@+id/btnSettings"
    android:layout_width="242dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="115dp"
    android:layout_alignEnd="@+id/btnStart"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/btnStart"
    android:background="@drawable/style_button"
    android:gravity="center"
    android:hint="@string/settings"
    android:textAllCaps="false"
    android:textColor="@color/colorButtonText"
    android:textSize="20sp"/>

  <Button
    android:id="@+id/btnInfo"
    android:layout_width="242dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="56dp"
    android:layout_alignEnd="@+id/btnSettings"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/btnSettings"
    android:background="@drawable/style_button"
    android:gravity="center"
    android:hint="@string/info"
    android:textAllCaps="false"
    android:textColor="@color/colorButtonText"
    android:textSize="20sp"/>


</RelativeLayout>